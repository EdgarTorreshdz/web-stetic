---
interface Props {
  lang?: 'en' | 'es';
}

const { lang = "en" } = Astro.props;

const translations = {
  en: {
    title: "Root Canal Treatment Process",
    footer: "The procedure is designed to relieve pain and stabilize the tooth efficiently.",
    steps: [
      {
        title: "Dental examination and X-rays",
        img: "/especialidad1.jpeg"
      },
      {
        title: "Removal of infected tissue",
        img: "/especialidad-about.avif"
      },
      {
        title: "Cleaning and sealing of the root canal",
        img: "/sonrisa1.jpg"
      },
      {
        title: "Temporary or permanent restoration",
        img: "/sonrisa2.jpg"
      }
    ]
  },
  es: {
    title: "Proceso del Tratamiento de Endodoncia",
    footer: "El procedimiento está diseñado para aliviar el dolor y estabilizar el diente de manera eficiente.",
    steps: [
      {
        title: "Examen dental y radiografías",
        img: "/especialidad1.jpeg"
      },
      {
        title: "Eliminación del tejido infectado",
        img: "/especialidad-about.avif"
      },
      {
        title: "Limpieza y sellado del conducto",
        img: "/sonrisa1.jpg"
      },
      {
        title: "Restauración temporal o permanente",
        img: "/sonrisa2.jpg"
      }
    ]
  }
};

const t = translations[lang];
---

<section class="process-section">
  <div class="container">
    <h2 class="process__title">{t.title}</h2>
    <div class="process__accent-line"></div>

    <div class="process__grid">
      {t.steps.map((step, index) => (
        <div class="process__step">
          <div class="process__image-wrapper">
            <span class="process__number">{index + 1}</span>
            <img src={step.img} alt={step.title} class="process__img" />
          </div>
          <h3 class="process__step-title">{step.title}</h3>
        </div>
      ))}
    </div>

    <div class="process__footer">
        <p>{t.footer}</p>
    </div>
  </div>
</section>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --white: #ffffff;
    --light-grey: #f9f9f9;
  }

  .process-section {
    padding: 100px 0;
    background-color: var(--white); /* Fondo blanco solicitado */
    color: var(--black); /* Texto base negro */
  }

  .container {
    margin: 0 auto;
    width: 85%;
    text-align: center;
  }

  .process__title {
    font-size: 2rem;
    font-weight: 800;
    text-transform: uppercase;
    margin-bottom: 20px;
    color: var(--gold); /* Título dorado solicitado */
  }

  @media (min-width: 768px) {
    .process__title { font-size: 3rem; }
  }

  .process__accent-line {
    width: 80px;
    height: 3px;
    background-color: var(--gold);
    margin: 0 auto 60px auto;
  }

  .process__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
  }

  @media (min-width: 768px) {
    .process__grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (min-width: 1200px) {
    .process__grid {
      grid-template-columns: 1fr 1fr 1fr 1fr;
    }
  }

  .process__step {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .process__image-wrapper {
    position: relative;
    width: 100%;
    margin-bottom: 25px;
    border: 1px solid rgba(165, 142, 85, 0.2);
    padding: 8px;
    background-color: var(--white);
  }

  .process__number {
    position: absolute;
    top: -15px;
    left: -15px;
    width: 40px;
    height: 40px;
    background-color: var(--gold);
    color: var(--white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 800;
    font-size: 1.2rem;
    z-index: 2;
    border-radius: 2px;
  }

  .process__img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .process__step:hover .process__img {
    transform: scale(1.02);
  }

  @media (min-width: 992px) {
    .process__img {
      max-height: 450px; /* Restricción solicitada */
    }
  }

  .process__step-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--black); /* Texto negro solicitado */
    text-transform: uppercase;
    margin-top: 10px;
    line-height: 1.4;
    letter-spacing: 0.5px;
  }

  .process__footer {
    margin-top: 60px;
    padding: 30px;
    background-color: var(--light-grey);
    border-top: 3px solid var(--gold); /* Detalle en dorado */
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .process__footer p {
    font-size: 1.1rem;
    font-style: italic;
    color: var(--black); /* Texto negro solicitado */
    margin: 0;
    line-height: 1.6;
  }
</style>