<style>
  /* Estilos base (Mobile First) */
  .formulario-cita {
    background-color: #03192c;
    color: #fff;
    padding: 1rem;
    font-family: "Montserrat", sans-serif;
    font-size: 0.875rem;
  }
  .formulario-cita__container {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
  }
  .formulario-cita__header {
    text-align: center;
    margin-bottom: 1.5rem;
    margin-top: 140px;
  }
  @media (min-width: 768px) {
    .formulario-cita__header {
      margin-top: 20px;
    }
  }
  .formulario-cita__header h1 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }
  .formulario-cita__header p {
    font-size: 0.875rem;
    margin: 0;
  }
  .formulario-cita__form {
    display: grid;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }
  .formulario-cita__field {
    display: flex;
    flex-direction: column;
  }
  .formulario-cita__field label {
    margin-bottom: 0.5rem;
    font-weight: bold;
    font-size: 0.875rem;
  }
  .formulario-cita__field input,
  .formulario-cita__field select {
    padding: 0.5rem;
    border: none;
    border-radius: 4px;
    font-size: 0.875rem;
  }
  .formulario-cita__field input:focus,
  .formulario-cita__field select:focus {
    outline: none;
    box-shadow: 0 0 0 2px #27b9c6;
  }
  .formulario-cita__field__terminos {
    display: flex;
    align-items: center;
    font-size: 0.75rem;
  }
  .formulario-cita__field__terminos label {
    margin-left: 0.5rem;
  }
  .formulario-cita__required-note {
    font-size: 0.75rem;
    font-style: italic;
    text-align: right;
  }
  .formulario-cita__submit {
    text-align: center;
  }
  .formulario-cita__submit button {
    background-color: #27b9c6;
    color: #fff;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    text-transform: uppercase;
    padding: 0.75rem 1.5rem;
    border: none;
    transition: background-color 0.3s ease;
  }
  .formulario-cita__submit button:hover {
    background-color: #a0522d;
    cursor: pointer;
  }
  .formulario-cita__footer {
    background-color: #02101d;
    padding: 1rem;
    border-radius: 4px;
    font-size: 0.75rem;
  }
  .formulario-cita__footer > div {
    margin-bottom: 1rem;
  }
  .formulario-cita__footer p {
    margin: 0.5rem 0;
    font-size: 0.75rem;
  }
  .formulario-cita__footer .icon {
    margin-right: 0.5rem;
    vertical-align: middle;
  }
  .formulario-cita__map iframe {
    width: 100%;
    border: 0;
  }

  /* Estilos para pantallas medianas en adelante */
  @media (min-width: 768px) {
    .formulario-cita {
      padding: 2rem;
      font-size: 1rem;
    }
    .formulario-cita__container {
      padding: 2rem;
    }
    .formulario-cita__header h1 {
      font-size: 1.75rem;
    }
    .formulario-cita__header p,
    .formulario-cita__field label,
    .formulario-cita__field input,
    .formulario-cita__field select {
      font-size: 1rem;
    }
    .formulario-cita__submit button {
      font-size: 1rem;
    }
    .formulario-cita__footer,
    .formulario-cita__footer p {
      font-size: 0.875rem;
    }
  }
  /* Spinner overlay */
  .spinner-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }
  .spinner-overlay.hidden {
    display: none !important;
  }
  .spinner {
    border: 4px solid #f3f3f3;
    border-top: 4px solid #27b9c6;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 1s linear infinite;
  }
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .alert {
    padding: 0.75rem 1.25rem;
    margin-bottom: 1rem;
    border-radius: 0.25rem;
    /* restablece el color heredado */
    color: initial !important;
    text-align: center;
    margin-top: 20px;
  }

  .alert-success {
    background-color: #d4edda !important;
    color: #155724 !important;
    border: 1px solid #c3e6cb !important;
  }

  .alert-danger {
    background-color: #f8d7da !important;
    color: #721c24 !important;
    border: 1px solid #f5c6cb !important;
  }
  .informacion__adicional {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
  }
  @media screen and (min-width: 768px) {
    .informacion__adicional {
      grid-template-columns: repeat(2, 1fr);
    }
    
  }
</style>

<script type="module">
  const form = document.getElementById("bookingForm");
  const spinner = document.getElementById("spinnerOverlay");
  const alertContainer = document.getElementById("formAlertContainer");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    alertContainer.innerHTML = "";
    spinner.classList.remove("hidden");

    const data = {
      firstName: form.nombre.value.trim(),
      lastName: form.apellido.value.trim(),
      phone: form.celular.value.trim(),
      email: form.correo.value.trim(),
      treatment: form.motivo.value,
      privacy: form.terminos.checked,
    };

    try {
      const res = await fetch(
        "https://correos-stetic-dental.onrender.com/send-email",
        {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(data),
        },
      );
      const json = await res.json();

      if (res.ok) {
        alertContainer.innerHTML = `
          <div style="
            background-color: #d4edda;
            color: #155724;
            padding: .75rem 1.25rem;
            border: 1px solid #c3e6cb;
            border-radius: .25rem;
            margin-bottom:1rem;
            text-align:center;
          ">
            ¡Correo enviado correctamente!
          </div>`;
        form.reset();
      } else {
        alertContainer.innerHTML = `
          <div style="
            background-color: #f8d7da;
            color: #721c24;
            padding: .75rem 1.25rem;
            border: 1px solid #f5c6cb;
            border-radius: .25rem;
            margin-bottom:1rem;
            text-align:center;
          ">
            ${json.error || "Error enviando el correo."}
          </div>`;
      }
    } catch {
      alertContainer.innerHTML = `
        <div style="
          background-color: #f8d7da;
          color: #721c24;
          padding: .75rem 1.25rem;
          border: 1px solid #f5c6cb;
          border-radius: .25rem;
          margin-bottom:1rem;
          text-align:center;
        ">
          Error de red, inténtalo de nuevo.
        </div>`;
    } finally {
      spinner.classList.add("hidden");
    }
  });
</script>
