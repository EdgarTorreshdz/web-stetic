---
interface Props {
  title: string;
  description: string;
  beforeImage: string;
  afterImage: string;
  beforeLabel?: string;
  afterLabel?: string;
}

const { 
  title, 
  description, 
  beforeImage, 
  afterImage, 
  beforeLabel = "Before", 
  afterLabel = "After" 
} = Astro.props;
---

<section class="ba-section">
  <div class="container">
    <div class="ba__header">
      <h2 class="ba__title">{title}</h2>
      <div class="ba__accent-line"></div>
      <p class="ba__description">{description}</p>
    </div>

    <div class="ba__comparison">
      <div class="ba__item">
        <div class="ba__img-wrapper">
          <img src={beforeImage} alt={`${title} ${beforeLabel}`} class="ba__img" />
          <span class="ba__label">{beforeLabel}</span>
        </div>
      </div>
      
      <div class="ba__item">
        <div class="ba__img-wrapper ba__img-wrapper--after">
          <img src={afterImage} alt={`${title} ${afterLabel}`} class="ba__img" />
          <span class="ba__label ba__label--gold">{afterLabel}</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --white: #ffffff;
  }

  .ba-section {
    padding: 100px 0;
    background-color: #f9f9f9;
  }

  .container {
    margin: 0 auto;
    width: 85%;
  }

  .ba__header {
    text-align: center;
    margin-bottom: 50px;
  }

  .ba__title {
    font-size: 1.8rem;
    font-weight: 800;
    text-transform: uppercase;
    margin-bottom: 15px;
    color: var(--black);
  }

  @media (min-width: 768px) {
    .ba__title { font-size: 2.5rem; }
  }

  .ba__accent-line {
    width: 80px;
    height: 3px;
    background-color: var(--gold);
    margin: 0 auto 25px;
  }

  .ba__description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #333;
    max-width: 700px;
    margin: 0 auto;
  }

  .ba__comparison {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
    margin-top: 40px;
  }

  @media (min-width: 768px) {
    .ba__comparison {
      grid-template-columns: 1fr 1fr;
      gap: 30px;
    }
  }

  .ba__img-wrapper {
    position: relative;
    border: 1px solid #ddd;
    padding: 10px;
    background: var(--white);
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
  }

  .ba__img-wrapper--after {
    border-color: var(--gold);
  }

  .ba__img {
    width: 100%;
    max-height: 450px;
    display: block;
    object-fit: cover;
  }

  .ba__label {
    position: absolute;
    bottom: 20px;
    left: 20px;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 5px 15px;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ba__label--gold {
    background: var(--gold);
  }
</style>