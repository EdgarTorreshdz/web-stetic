---
interface Step {
  title: string;
}

interface Props {
  title: string;
  footer: string;
  steps: Step[];
}

const { title, footer, steps } = Astro.props;

// Calculamos el número de columnas basado en la cantidad de pasos
const totalSteps = steps.length;
---

<section class="process-section">
  <div class="container">
    <h2 class="process__title">{title}</h2>
    <div class="process__accent-line"></div>

    <div class="process__grid" style={`--total-columns: ${totalSteps};`}>
      {steps.map((step, index) => (
        <div class="process__step">
          <div class="process__number-container">
            <span class="process__big-number">{index + 1}</span>
          </div>
          <h3 class="process__step-title">{step.title}</h3>
        </div>
      ))}
    </div>

    <div class="process__footer">
        <p>{footer}</p>
    </div>
  </div>
</section>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --white: #ffffff;
  }

  .process-section {
    padding: 100px 0;
    background-color: var(--black);
    color: var(--white);
  }

  .container {
    margin: 0 auto;
    width: 90%; /* Un poco más ancho para dar espacio a más columnas */
    text-align: center;
  }

  /* ... (Estilos de título y línea de acento iguales) ... */
  .process__title {
    font-size: 2rem;
    font-weight: 800;
    text-transform: uppercase;
    margin-bottom: 20px;
    color: var(--white);
    letter-spacing: 1px;
  }
  @media (min-width: 768px) {
    .process__title { font-size: 3rem; }
  }
  .process__accent-line {
    width: 80px;
    height: 3px;
    background-color: var(--gold);
    margin: 0 auto 60px auto;
  }

  .process__grid {
    display: grid;
    grid-template-columns: 1fr; /* Móvil: 1 columna */
    gap: 30px;
  }

  /* Tablets: de 2 en 2 si hay muchos, o 1 si hay pocos */
  @media (min-width: 768px) {
    .process__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Escritorio: Usa la variable dinámica --total-columns */
  @media (min-width: 1200px) {
    .process__grid {
      /* repeat(var, 1fr) hace que si tienes 5 pasos, cree 5 columnas */
      grid-template-columns: repeat(var(--total-columns), 1fr);
    }
  }

  .process__step {
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: transform 0.3s ease;
  }

  .process__number-container {
    position: relative;
    width: 100px; /* Reducido un poco para que quepan más en horizontal */
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid rgba(165, 142, 85, 0.4);
    border-radius: 50%;
    margin-bottom: 25px;
    transition: all 0.4s ease;
  }

  .process__big-number {
    font-size: 3rem;
    font-weight: 700;
    color: var(--gold);
    font-family: serif;
    line-height: 1;
  }

  /* Hover effects */
  .process__step:hover {
    transform: translateY(-5px);
  }
  .process__step:hover .process__number-container {
    background-color: var(--gold);
    border-color: var(--gold);
  }
  .process__step:hover .process__big-number {
    color: var(--white);
  }

  .process__step-title {
    font-size: 0.95rem; /* Reducido un poco para evitar que se pisen los textos */
    font-weight: 600;
    color: var(--white);
    text-transform: uppercase;
    margin-top: 10px;
    line-height: 1.3;
    max-width: 180px;
  }

  .process__footer {
    margin-top: 80px;
    padding: 30px;
    border: 1px dashed var(--gold);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    border-radius: 15px;
  }

  .process__footer p {
    font-size: 1.1rem;
    font-style: italic;
    color: #e0e0e0;
    margin: 0;
  }
</style>