---
interface Props {
  title: string;
  text1: string;
  text2: string;
}

const { title, text1, text2 } = Astro.props;
---

<section class="cost-section">
  <div class="container">
    <div class="cost__content">
      <h2 class="cost__title">{title}</h2>
      <div class="cost__accent-line"></div>
      <p class="cost__text cost__text--highlight">
        {text1}
      </p>
      <p class="cost__text">
        {text2}
      </p>
    </div>
  </div>
</section>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --white: #ffffff;
  }

  .cost-section {
    padding: 80px 0;
    background-color: var(--white);
    color: var(--black);
  }

  .container {
    margin: 0 auto;
    width: 85%;
    max-width: 1200px; /* Ancho máximo para optimizar la lectura del texto centrado */
  }

  .cost__content {
    text-align: center; /* Centra el texto */
    display: flex;
    flex-direction: column;
    align-items: center; /* Centra la línea de acento y bloques internos */
  }

  .cost__title {
    font-size: 1.8rem;
    font-weight: 800;
    text-transform: uppercase;
    line-height: 1.2;
    margin-bottom: 20px;
    color: var(--black);
  }

  @media (min-width: 768px) {
    .cost__title { font-size: 2.5rem; }
  }

  .cost__accent-line {
    width: 80px;
    height: 3px;
    background-color: var(--gold);
    margin-bottom: 30px;
  }

  .cost__text {
    font-size: 1rem;
    line-height: 1.7;
    margin-bottom: 20px;
    color: #333;
  }

  .cost__text--highlight {
    font-size: 1.15rem;
    font-weight: 600;
    color: var(--black);
    /* Eliminamos el borde izquierdo y el padding lateral para el diseño centrado */
    border-left: none;
    padding-left: 0;
    margin-bottom: 25px;
  }

  @media (min-width: 768px) {
    .cost__text { font-size: 1.1rem; }
    .cost__text--highlight { font-size: 1.3rem; }
  }
</style>