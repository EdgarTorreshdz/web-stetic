---
interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.params as { lang: 'en' | 'es' } || Astro.props;

const formData = {
  en: {
    title: "Book Your Dental Appointment in Playa del Carmen",
    id: "inline-2tYqHhtdE1tG0rLJonF4",
    src: "https://api.leadconnectorhq.com/widget/form/2tYqHhtdE1tG0rLJonF4",
    formId: "2tYqHhtdE1tG0rLJonF4",
    name: "Formulario website - ENG",
    height: "100%"
  },
  es: {
    title: "Reserva tu Cita Dental en Playa del Carmen",
    id: "inline-gXE4nbJldN7n7pbF9zzd",
    src: "https://api.leadconnectorhq.com/widget/form/gXE4nbJldN7n7pbF9zzd",
    formId: "gXE4nbJldN7n7pbF9zzd",
    name: "Formulario website - ESP",
    height: "995"
  }
};

const currentForm = formData[lang] || formData.en;
---

<section id="contact" class="contact-section">
  <div class="container">
    
    <h2 class="contact-title">
      {currentForm.title}
    </h2>

    <div class="form-wrapper">
      <iframe
        src={currentForm.src}
        style="width:100%; height:100%; border:none;"
        id={currentForm.id}
        data-layout="{'id':'INLINE'}"
        data-trigger-type="alwaysShow"
        data-trigger-value=""
        data-activation-type="alwaysActivated"
        data-activation-value=""
        data-deactivation-type="neverDeactivate"
        data-deactivation-value=""
        data-form-name={currentForm.name}
        data-height={currentForm.height}
        data-layout-iframe-id={currentForm.id}
        data-form-id={currentForm.formId}
        title={currentForm.name}
      >
      </iframe>
    </div>
  </div>
</section>

<script is:inline src="https://link.msgsndr.com/js/form_embed.js"></script>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --white: #ffffff;
  }

  .contact-section {
    padding: 6rem 0;
    background-color: var(--black);
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .container {
    width: 90%;
    max-width: 900px; /* Un poco más estrecho para que el form luzca más estilizado */
    margin: 0 auto;
  }

  .contact-title {
    text-align: center;
    font-size: 2.2rem;
    font-weight: 800;
    color: var(--white);
    text-transform: uppercase;
    margin-bottom: 3rem;
    line-height: 1.1;
    letter-spacing: -0.5px;
  }

  .form-wrapper {
    width: 100%;
    /* Ajustamos la altura mínima para evitar saltos visuales mientras carga */
    min-height: 700px;
    height: auto;
    background-color: transparent; /* Eliminamos el fondo gris/blanco */
    padding: 0; /* Eliminamos el marco interno */
    border: none; /* Eliminamos cualquier borde o marco */
    box-shadow: none; /* Eliminamos sombras para que se integre al fondo negro */
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .contact-section {
      padding: 4rem 0;
    }
    .contact-title {
      font-size: 1.7rem;
      margin-bottom: 2rem;
    }
    .form-wrapper {
      min-height: 850px;
    }
  }
</style>