---
import { Icon } from "astro-icon/components";

interface Props {
  lang: 'en' | 'es'; // Cambiado para manejar el idioma del form
  title: string;
  description: string;
  buttonText: string;
  note: string;
}

const { lang = "en", title, description, buttonText, note } = Astro.props;

const formData = {
  en: {
    id: "inline-2tYqHhtdE1tG0rLJonF4",
    src: "https://api.leadconnectorhq.com/widget/form/2tYqHhtdE1tG0rLJonF4",
    formId: "2tYqHhtdE1tG0rLJonF4",
    name: "Formulario website - ENG",
  },
  es: {
    id: "inline-gXE4nbJldN7n7pbF9zzd",
    src: "https://api.leadconnectorhq.com/widget/form/gXE4nbJldN7n7pbF9zzd",
    formId: "gXE4nbJldN7n7pbF9zzd",
    name: "Formulario website - ESP",
  }
};

const currentForm = formData[lang] || formData.en;
---

<section class="cta-section">
  <div class="container">
    <div class="cta__card">
      <h2 class="cta__title">{title}</h2>
      <div class="cta__accent-line"></div>
      
      <p class="cta__description">
        {description}
      </p>

      <div class="cta__form-container">
        <iframe
          src={currentForm.src}
          style="width:100%; height:100%; border:none; background:transparent;"
          id={currentForm.id}
          data-layout="{'id':'INLINE'}"
          data-trigger-type="alwaysShow"
          data-trigger-value=""
          data-activation-type="alwaysActivated"
          data-activation-value=""
          data-deactivation-type="neverDeactivate"
          data-deactivation-value=""
          data-form-name={currentForm.name}
          data-height="700"
          data-layout-iframe-id={currentForm.id}
          data-form-id={currentForm.formId}
          title={currentForm.name}
        >
        </iframe>
      </div>
      
      <p class="cta__note">
        {note}
      </p>
    </div>
  </div>
</section>

<script is:inline src="https://link.msgsndr.com/js/form_embed.js"></script>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --white: #ffffff;
  }

  .cta-section {
    padding: 100px 0;
    background-color: var(--black);
    color: var(--white);
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(165, 142, 85, 0.08) 0%, rgba(0,0,0,0) 70%);
    transform: translate(-50%, -50%);
    z-index: 0;
  }

  .container {
    margin: 0 auto;
    width: 90%;
    max-width: 1200px;
    position: relative;
    z-index: 1;
  }

  .cta__card {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    padding: 60px 20px;
    border: 1px solid rgba(165, 142, 85, 0.2);
    background-color: rgba(255, 255, 255, 0.01);
  }

  .cta__title {
    font-size: 2.2rem;
    font-weight: 800;
    text-transform: uppercase;
    color: var(--gold);
    margin-bottom: 20px;
    line-height: 1.2;
  }

  @media (min-width: 768px) {
    .cta__title { font-size: 3.2rem; }
  }

  .cta__accent-line {
    width: 80px;
    height: 3px;
    background-color: var(--gold);
    margin: 0 auto 30px auto;
  }

  .cta__description {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #e0e0e0;
    margin-bottom: 40px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Estilos para el formulario integrado */
  .cta__form-container {
    width: 100%;
    min-height: 650px; /* Ajuste según la longitud de tu form */
    margin: 0 auto;
    background: transparent;
  }

  .cta__note {
    font-size: 0.9rem;
    color: var(--gold);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-top: 30px;
  }

  @media (max-width: 768px) {
    .cta__form-container {
      min-height: 850px; /* Más alto en móviles por inputs apilados */
    }
    .cta__card {
      padding: 40px 15px;
    }
  }
</style>