---
interface Props {
  title: string;
  text1: string;
}

const { title, text1 } = Astro.props;
---

<section class="americans-section">
  <div class="container">
    <div class="americans__content">
      <h2 class="americans__title">{title}</h2>
      <div class="americans__accent-line"></div>
      <p class="americans__text">
        {text1}
      </p>
    </div>
  </div>
</section>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --white: #ffffff;
  }

  .americans-section {
    padding: 100px 0;
    background-color: var(--black);
    color: var(--white);
    text-align: center;
  }

  .container {
    margin: 0 auto;
    width: 85%;
  }

  .americans__content {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .americans__title {
    font-size: 2rem;
    font-weight: 800;
    text-transform: uppercase;
    line-height: 1.2;
    margin-bottom: 20px;
    color: var(--gold);
  }

  @media (min-width: 768px) {
    .americans__title { font-size: 3rem; }
  }

  .americans__accent-line {
    width: 80px;
    height: 3px;
    background-color: var(--gold);
    margin: 0 auto 35px auto;
  }

  .americans__text {
    font-size: 1.15rem;
    line-height: 1.8;
    color: var(--white);
    max-width: 800px;
  }

  @media (min-width: 768px) {
    .americans__text { font-size: 1.35rem; }
  }
</style>