---
interface Props {
  title: string;
  text1: string;
  text2: string;
}

const { title, text1, text2 } = Astro.props;
---

<section class="what-is-section">
  <div class="container">
    <div class="what-is__content">
      <h2 class="what-is__title">{title}</h2>
      <div class="what-is__accent-line"></div>
      <p class="what-is__text what-is__text--highlight">
        {text1}
      </p>
      <p class="what-is__text">
        {text2}
      </p>
    </div>
  </div>
</section>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --white: #ffffff;
  }

  .what-is-section {
    position: relative;
    padding: 80px 0;
    background-color: var(--white);
    color: var(--black);
    overflow: hidden;
  }

  .container {
    position: relative;
    z-index: 1;
    margin: 0 auto;
    width: 85%;
    max-width: 1200px; /* Limitamos el ancho para que el texto centrado sea legible */
  }

  .what-is__content {
    text-align: center; /* Centra el texto */
    display: flex;
    flex-direction: column;
    align-items: center; /* Centra la l√≠nea de acento */
  }

  .what-is__title {
    font-size: 1.8rem;
    font-weight: 800;
    text-transform: uppercase;
    line-height: 1.2;
    margin-bottom: 20px;
    color: var(--black);
  }

  @media (min-width: 768px) {
    .what-is__title { font-size: 2.5rem; }
  }

  .what-is__accent-line {
    width: 80px;
    height: 3px;
    background-color: var(--gold);
    margin-bottom: 30px;
  }

  .what-is__text {
    font-size: 1rem;
    line-height: 1.7;
    margin-bottom: 20px;
    color: #111111;
  }

  .what-is__text--highlight {
    font-size: 1.15rem;
    font-weight: 600;
    /* Eliminamos el borde izquierdo y agregamos padding vertical para el estilo destacado */
    padding: 10px 0;
  }

  @media (min-width: 768px) {
    .what-is__text { font-size: 1.1rem; }
    .what-is__text--highlight { font-size: 1.3rem; }
  }
</style>