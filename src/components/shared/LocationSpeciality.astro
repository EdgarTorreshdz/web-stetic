---
interface Props {
  title: string;
  text1: string;
  imageSrc: string;
  imageAlt: string;
}

const { title, text1, imageSrc, imageAlt } = Astro.props;
---

<section class="location-section">
  <div class="container">
    <div class="location__grid">
      
      <div class="location__content">
        <h2 class="location__title">{title}</h2>
        <div class="location__accent-line"></div>
        <div class="location__text-box">
          <p class="location__text">
            {text1}
          </p>
        </div>
      </div>

      <div class="location__image-container">
        <div class="location__img-wrapper">
            <img src={imageSrc} alt={imageAlt} class="location__img" />
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --white: #ffffff;
  }

  .location-section {
    padding: 100px 0;
    background-color: var(--white);
    color: var(--black);
  }

  .container {
    margin: 0 auto;
    width: 85%;
  }

  .location__grid {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
  }

  @media (min-width: 992px) {
    .location__grid {
      flex-direction: row;
      justify-content: space-between;
      gap: 60px;
    }
  }

  .location__content {
    flex: 1.2;
    text-align: left;
  }

  .location__title {
    font-size: 1.8rem;
    font-weight: 800;
    text-transform: uppercase;
    line-height: 1.2;
    margin-bottom: 20px;
    color: var(--black);
  }

  @media (min-width: 768px) {
    .location__title { font-size: 2.5rem; }
  }

  .location__accent-line {
    width: 80px;
    height: 3px;
    background-color: var(--gold);
    margin-bottom: 30px;
  }

  .location__text-box {
    border-left: 1px solid #eee;
    padding-left: 25px;
  }

  .location__text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #333;
  }

  @media (min-width: 768px) {
    .location__text { font-size: 1.2rem; }
  }

  .location__image-container {
    flex: 1;
    width: 100%;
  }

  .location__img-wrapper {
    position: relative;
    padding: 10px;
  }

  .location__img-wrapper::after {
    content: "";
    position: absolute;
    top: 25px;
    right: -10px;
    width: 100%;
    height: 100%;
    border: 2px solid var(--gold);
    z-index: 0;
  }

  .location__img {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
    position: relative;
    z-index: 1;
    box-shadow: 0 15px 30px rgba(0,0,0,0.1);
  }

  @media (min-width: 992px) {
    .location__img { max-height: 450px; }
  }
</style>