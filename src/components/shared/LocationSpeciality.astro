---
interface Props {
  title: string;
  text1: string;
  mapUrl: string;
}

const { title, text1, mapUrl } = Astro.props;
---

<section class="location-section">
  <div class="container">
    <div class="location__content">
      <h2 class="location__title">{title}</h2>
      <div class="location__accent-line"></div>
      <div class="location__text-box">
        <p class="location__text">
          {text1}
        </p>
      </div>
    </div>

    <div class="location__map-container">
      <div class="location__map-wrapper">
        <iframe 
          src={mapUrl} 
          width="100%" 
          height="450" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
          class="location__map"
        ></iframe>
      </div>
    </div>
  </div>
</section>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --white: #ffffff;
  }

  .location-section {
    padding: 80px 0;
    background-color: var(--white);
    color: var(--black);
  }

  .container {
    margin: 0 auto;
    width: 85%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 50px;
  }

  .location__content {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  .location__title {
    font-size: 2rem;
    font-weight: 800;
    text-transform: uppercase;
    line-height: 1.2;
    margin-bottom: 20px;
    color: var(--black);
  }

  @media (min-width: 768px) {
    .location__title { font-size: 2.5rem; }
  }

  .location__accent-line {
    width: 80px;
    height: 3px;
    background-color: var(--gold);
    margin-bottom: 30px;
  }

  .location__text-box {
    /* Quitamos el borde izquierdo ya que ahora est√° centrado */
    padding: 0;
    max-width: 950px;
  }

  .location__text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #333;
    margin: 0;
  }

  .location__map-container {
    width: 100%;
  }

  .location__map-wrapper {
    position: relative;
    padding: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Marco dorado centrado rodeando el mapa */
  .location__map-wrapper::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 2px solid var(--gold);
    z-index: 0;
    pointer-events: none;
    border-radius: 8px;
  }

  .location__map {
    width: 100%;
    display: block;
    position: relative;
    z-index: 1;
    box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    filter: grayscale(0.2);
    border-radius: 4px;
  }

  @media (max-width: 768px) {
    .location-section { padding: 60px 0; }
    .location__map { height: 350px; }
    .container { gap: 30px; }
  }
</style>