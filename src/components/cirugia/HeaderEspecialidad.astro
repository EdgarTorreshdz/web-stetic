---
import { Icon } from "astro-icon/components";

// 1. Definimos la interfaz para TypeScript
interface Props {
  lang?: 'en' | 'es';
}

// 2. Obtenemos el idioma de las props (si no viene, por defecto inglés)
const { lang = "en" } = Astro.props;

// 3. Diccionario de textos
const translations = {
  en: {
    title: "Surgery",
    category: "Specialties",
    description: "We have the highest standards in comprehensive dental services to guarantee the dental well-being of your entire family.",
    button: "I want my Stetic Dental smile!",
  },
  es: {
    title: "Cirugía",
    category: "Especialidades",
    description: "Contamos con los más altos estándares en servicios dentales integrales para garantizar el bienestar odontológico de toda tu familia.",
    button: "¡Quiero mi sonrisa con Stetic Dental!",
  }
};

// Seleccionamos la traducción según el idioma
const t = translations[lang];
---

<header class="header">
  <div
    class="header__background"
    style="background-image: url('/especialidad1.jpeg');"
  >
    <div class="header__overlay"></div>
    <div class="header__content container">
      <h1 class="header__title">{t.title}</h1>
      <div class="header__welcome">
        <span class="header__line"></span>
        <span class="header__welcome-text">{t.category}</span>
        <span class="header__line"></span>
      </div>
      <p class="header__description">
        {t.description}
      </p>
      <div>
        <a class="banner-contact__btn" href="#about">
          {t.button}
          <Icon
            name="arrow-down"
            color="white"
            class="arrow-down"
            size={20}
          />
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    position: relative;
    width: 100%;
    height: 100dvh;
    overflow: hidden;
  }

  .header__background {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  .header__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(3, 21, 36, 0.9);
  }

  .header__content {
    position: relative;
    color: #fff;
    text-align: center;
    padding: 1rem;
    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 70%;
  }

  .header__title {
    font-size: 35px;
    margin-bottom: 1rem;
    margin-top: 140px;
  }
  @media (min-width: 768px) {
    .header__title {
      font-size: 77px;
      margin-top: 20px;
    }
  }

  .header__welcome {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 1rem 0;
  }

  .header__line {
    flex: 1;
    height: 2px;
    background-color: #27b9c6;
    margin: 0 1rem;
  }

  .header__welcome-text {
    font-size: 13px;
    font-weight: bold;
    color: #fff;
    text-transform: uppercase;
  }

  .header__description {
    font-size: 18px;
  }

  @media (min-width: 768px) {
    .header__description {
      font-size: 22px;
    }
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    width: 95%;
  }
  .banner-contact__btn {
    background-color: #27b9c6;
    color: #fff;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    font-size: 12px;
    transition: background-color 0.3s ease;
    text-transform: uppercase;
    padding: 20px 30px;
    font-weight: bold;
  }
  .banner-contact__btn:hover {
    background-color: #27b9c6;
  }
  .arrow-down {
    margin-left: 20px;
    animation: bounce 1s ease-in-out infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(10px); }
  }
</style>