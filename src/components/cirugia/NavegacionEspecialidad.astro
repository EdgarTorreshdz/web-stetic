---
// NavegacionEspecialidad.astro

// 1. Tipado para TypeScript
interface Props {
  lang?: 'en' | 'es';
}

const { lang = "en" } = Astro.props;

// 2. Prefijo dinámico
const prefix = `/${lang}`;

// 3. Diccionario de nombres de especialidades
const labels = {
  en: {
    general: "General Dentistry",
    esthetic: "Esthetic Dentistry",
    endodontics: "Endodontics",
    orthodontics: "Orthodontics",
    orthopedics: "Orthopedics",
    surgery: "Surgery",
    pediatric: "Pediatric Dentistry",
    rehabilitation: "Rehabilitation"
  },
  es: {
    general: "Odontología General",
    esthetic: "Odontología Estética",
    endodontics: "Endodoncia",
    orthodontics: "Ortodoncia",
    orthopedics: "Ortopedia",
    surgery: "Cirugía",
    pediatric: "Odontopediatría",
    rehabilitation: "Rehabilitación"
  }
};

const t = labels[lang];
---

<nav class="nav__especialidades">
  <a href={`${prefix}/especialidades`}>{t.general}</a>
  <a href={`${prefix}/odontologia-estetica`}>{t.esthetic}</a>
  <a href={`${prefix}/endodoncia`}>{t.endodontics}</a>
  <a href={`${prefix}/ortodoncia`}>{t.orthodontics}</a>
  <a href={`${prefix}/ortopedia`}>{t.orthopedics}</a>
  <a href={`${prefix}/cirugia`}>{t.surgery}</a>
  <a href={`${prefix}/odontopediatria`}>{t.pediatric}</a>
  <a href={`${prefix}/rehabilitacion`}>{t.rehabilitation}</a>
</nav>

<style>
  /* ========== Base (mobile‑first) ========== */
  .nav__especialidades {
    display: flex;
    flex-wrap: nowrap;               /* Una sola línea */
    overflow-x: auto;                /* Scroll horizontal */
    -webkit-overflow-scrolling: touch; /* Suaviza en iOS */
    scrollbar-width: thin;           /* Firefox: barra delgada */
    scrollbar-color: #ccc transparent;
    padding: 30px;
    border-bottom: 1px solid #e4d9d1;
    background-color: #fff;
  }

  .nav__especialidades a {
    flex-shrink: 0;                  /* No se encojan */
    margin: 0 20px;
    text-decoration: none;
    font-size: 13px;
    color: #927e70;
    white-space: nowrap;
    transition: color 0.3s ease;
  }

  .nav__especialidades a:hover {
    color: #27b9c6; /* Usamos tu azul corporativo para el hover */
  }

  /* WebKit (Chrome, Safari) scrollbar styling */
  .nav__especialidades::-webkit-scrollbar {
    height: 4px;
  }
  .nav__especialidades::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 2px;
  }
  .nav__especialidades::-webkit-scrollbar-track {
    background: transparent;
  }

  /* ========== Desktop (desde 768px) ========== */
  @media (min-width: 768px) {
    .nav__especialidades {
      overflow-x: hidden;            /* Sin scroll */
      justify-content: center;       /* Centrado */
    }
  }
</style>