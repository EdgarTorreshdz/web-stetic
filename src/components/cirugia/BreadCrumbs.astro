---
import { Image } from "astro:assets";
import flecha from "../../../public/flecha.svg";

// 1. Tipado para TypeScript
interface Props {
  lang?: 'en' | 'es';
}

const { lang = "en" } = Astro.props;

// 2. Traducciones y Rutas
const translations = {
  en: {
    home: "Home",
    current: "Surgery",
    contact: "Contact",
    homeUrl: "/",
    contactUrl: "/contacto"
  },
  es: {
    home: "Inicio",
    current: "Cirugía",
    contact: "Contacto",
    homeUrl: "/es/",
    contactUrl: "/es/contacto"
  }
};

const t = translations[lang];
