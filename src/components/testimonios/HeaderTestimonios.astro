---
import { Icon } from "astro-icon/components"
---
<header class="header">
    <div
        class="header__background"
        style="background-image: url('/testimonios-bg.webp');"
    >
        <div class="header__overlay"></div>
        <div class="header__content container">
            <h1 class="header__title">Historias de pacientes</h1>
            <div class="header__welcome">
                <span class="header__line"></span>
                <span class="header__welcome-text">Testimonios</span>
                <span class="header__line"></span>
            </div>
            <p class="header__description">
                Conoce la experiencia de nuestros pacientes satisfechos
            </p>
            <div>
                <a class="banner-testimonios__btn" href="#testimonios"> Explorar 
                    <Icon name="arrow-down" color="white" class="arrow-down" size={14}/></a>
            </div>
        </div>
    </div>
</header>

<style>
    .header {
        position: relative;
        width: 100%;
        height: 100dvh;
        overflow: hidden;
        
        
    }
 
    .header__background {
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .header__overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(3, 21, 36, 0.8);
    }

    .header__content {
        position: relative;
        color: #fff;
        text-align: center;
        padding: 1rem;
        z-index: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 70%;
    }

    .header__title {
        font-size: 35px;
        text-align: center;
        margin-bottom: 1rem;
        margin-top: 140px;
    }
    @media (min-width: 768px) {
        .header__title {
            text-align: unset;
            font-size: 77px;
            margin-top: 20px;
        }
    }

    .header__welcome {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 1rem 0;
    }

    .header__line {
        flex: 1;
        height: 2px;
        background-color: #27b9c6; /* Líneas de color café */
        margin: 0 1rem;
    }

    .header__welcome-text {
        font-size: 11px;
        font-weight: bold;
        color: #fff;
        text-transform: uppercase;
    }

    .header__description {
        font-size: 18px;
    }
    @media (min-width: 768px) {
        .header__description {
          font-size: 22px;
        }
    }


    .container {
        max-width: 1200px;
        margin: 0 auto;
        width: 95%;
    }

    .banner-testimonios__btn {
      background-color: #27B9C6;
      color: #fff;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      font-size: 14px;
      transition: background-color 0.3s ease;
      text-transform: uppercase;
      padding: 20px 30px;
      font-weight: bold;
    }
    @media (min-width: 768px) {
        .banner-testimonios__btn  {
          font-size: 22px;
        }
    }
    .banner-testimonios__btn:hover {
      background-color: #27B9C6;
    }
    .arrow-down {
        margin-left: 20px;
    }
</style>
