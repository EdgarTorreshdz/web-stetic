---
interface Props {
  lang?: 'en' | 'es';
}

const { lang = "en" } = Astro.props;

const translations = {
  en: {
    title: "Dental Clinic in Playa del Carmen, Mexico",
    text: "Our dental clinic is conveniently located in Playa del Carmen, one of Mexico’s most accessible and safe destinations for dental tourism. Easily reachable from major airports and close to hotels and tourist areas, our location allows patients to combine dental care with a comfortable stay.",
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3733.3082531362793!2d-87.0768!3d20.6296!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjDCsDM3JzQ2LjYiTiA4N8KwMDQnMzYuNSJX!5e0!3m2!1sen!2smx!4v1700000000000!5m2!1sen!2smx" 
  },
  es: {
    title: "Clínica Dental en Playa del Carmen, México",
    text: "Nuestra clínica dental está convenientemente ubicada en Playa del Carmen, uno de los destinos más accesibles y seguros de México para el turismo dental. De fácil acceso desde los principales aeropuertos y cerca de hoteles y zonas turísticas.",
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3733.3082531362793!2d-87.0768!3d20.6296!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjDCsDM3JzQ2LjYiTiA4N8KwMDQnMzYuNSJX!5e0!3m2!1ses!2smx!4v1700000000000!5m2!1ses!2smx"
  }
};

const t = translations[lang];
---

<section class="location-lux">
  <div class="container">
    <div class="location-lux__header">
      <h2 class="location-lux__title">{t.title}</h2>
      <p class="location-lux__text">{t.text}</p>
    </div>

    <div class="location-lux__map-container">
      <iframe 
        src={t.mapUrl} 
        width="100%" 
        height="450" 
        style="border:0;" 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade"
        class="location-lux__map"
      ></iframe>
      <div class="location-lux__map-border"></div>
    </div>
  </div>
</section>

<style>
  :root {
    --gold: #D4AF37;
    --black: #000000;
    --white: #ffffff;
    --gray-text: #444444;
  }

  .location-lux {
    background-color: var(--white);
    padding: 6rem 0;
  }

  .location-lux__header {
    text-align: center;
    max-width: 850px;
    margin: 0 auto 4rem;
  }

  .location-lux__subtitle {
    color: var(--gold);
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 4px;
    text-transform: uppercase;
    display: block;
    margin-bottom: 1rem;
  }

  .location-lux__title {
    font-size: 2.2rem;
    font-weight: 800;
    color: var(--black);
    text-transform: uppercase;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .location-lux__text {
    font-size: 1.1rem;
    color: var(--gray-text);
    line-height: 1.6;
  }

  .location-lux__map-container {
    position: relative;
    width: 100%;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    border-radius: 4px;
    overflow: hidden;
  }

  .location-lux__map {
    display: block;
    filter: grayscale(0.2) contrast(1.1); /* Toque elegante para el mapa */
  }

  /* Borde decorativo dorado sutil */
  .location-lux__map-border {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background-color: var(--gold);
    z-index: 2;
  }

  .container {
    margin: 0 auto;
    width: 85%;
  }

  @media (max-width: 768px) {
    .container {
      width: 90%; 
    }
    .location-lux {
      padding: 4rem 0;
    }
    .location-lux__title {
      font-size: 1.8rem;
    }
    .location-lux__map {
      height: 350px;
    }
  }
</style>