---
interface Props {
  lang?: 'en' | 'es';
}

const { lang = "en" } = Astro.props;

const translations = {
  en: {
    title: "Excellent on Google",
    subtitle: "Real Reviews from Our International Patients",
    description: "Patients from the United States and Canada trust our clinic in Playa del Carmen for quality dental care."
  },
  es: {
    title: "Excelente en Google",
    subtitle: "Opiniones Reales de Nuestros Pacientes Internacionales",
    description: "Pacientes de Estados Unidos y Canadá confían en nuestra clínica en Playa del Carmen por su atención dental de calidad."
  }
};

const t = translations[lang];
---

<section class="google-reviews-section">
  <div class="container">
    <div class="reviews-header text-center mb-5">
      <h2 class="section-title">{t.subtitle}</h2>
      <p class="section-description">{t.description}</p>
    </div>

    <div class="reviews-widget-container">
      <script src="https://static.elfsight.com/platform/platform.js" async></script>
      <div class="elfsight-app-093f8bfd-b23b-449a-8c00-526949c767e0" data-elfsight-app-lazy></div>
    </div>
  </div>
</section>

<style>
  .google-reviews-section {
    padding: 80px 0;
    background-color: #f8f9fa; /* Fondo gris claro similar a tu código base */
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: #000;
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  .section-description {
    font-size: 1.1rem;
    color: #666;
    max-width: 800px;
    margin: 5 auto;
  }

  .reviews-widget-container {
    background: white;
    border-radius: 15px;
    padding: 20px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
  }

  /* Ajuste de contenedores para que coincida con el ancho de tu web */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    width: 90%;
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 1.8rem;
    }
  }
</style>