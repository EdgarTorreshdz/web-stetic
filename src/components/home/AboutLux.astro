---
import { Icon } from "astro-icon/components";

interface Props {
  lang?: 'en' | 'es';
}

const { lang = "en" } = Astro.props;

const translations = {
  en: {
    // Requisito: H2 y párrafos exactos
    title: "Looking for a Dentist in Playa del Carmen You Can Trust?",
    descriptionTop: "Finding the right dentist in Playa del Carmen is essential when you are considering dental treatment abroad. Our dental clinic in Playa del Carmen, Mexico specializes in providing high-quality dental care for Americans who want professional treatment, transparent pricing, and a safe experience.",
    descriptionBottom: "We combine modern dental technology, certified specialists, and personalized care to help international patients feel confident choosing Mexico for their dental needs. From cosmetic dentistry to advanced procedures, our clinic is designed to meet the expectations of patients traveling from the United States.",
    features: [
      "English-speaking dentists",
      "Certified specialists",
      "Modern dental clinic in Playa del Carmen",
      "Affordable dental care vs USA"
    ],
  },
  es: {
    title: "¿Busca un dentista de confianza en Playa del Carmen?",
    descriptionTop: "Encontrar al dentista adecuado en Playa del Carmen es esencial cuando se considera un tratamiento dental en el extranjero. Nuestra clínica dental en Playa del Carmen, México, se especializa en brindar atención dental de alta calidad para pacientes que desean un tratamiento profesional, precios transparentes y una experiencia segura.",
    descriptionBottom: "Combinamos tecnología dental moderna, especialistas certificados y atención personalizada para ayudar a los pacientes internacionales a sentirse seguros al elegir México para sus necesidades dentales. Desde odontología estética hasta procedimientos avanzados, nuestra clínica está diseñada para cumplir con las expectativas de los pacientes.",
    features: [
      "Dentistas que hablan inglés",
      "Especialistas certificados",
      "Clínica moderna en Playa del Carmen",
      "Precios accesibles vs USA/Canadá"
    ],
  }
};

const t = translations[lang];
---

<section class="about-lux">
  <div class="container about-lux__grid">
    <div class="about-lux__image-container">
      <div class="about-lux__border-decorator"></div>
      <img src="/nosotros.jpg" alt="Trusted Dentist in Playa del Carmen - Stetic Dental Clinic" class="about-lux__image" />
    </div>

    <div class="about-lux__content">
      <h2 class="about-lux__title">{t.title}</h2>
      
      <p class="about-lux__description">{t.descriptionTop}</p>
      <p class="about-lux__description">{t.descriptionBottom}</p>

      <ul class="about-lux__features">
        {t.features.map((feature) => (
          <li>
            <Icon name="star" class="feature-icon" size={18} />
            <span>{feature}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>

<style>
  :root {
    --gold: #D4AF37;
    --black: #000000;
    --white: #ffffff;
    --gray: #1a1a1a;
  }

  .about-lux {
    background-color: var(--black);
    color: var(--white);
    padding: 5rem 0;
    overflow: hidden;
  }

  .about-lux__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    align-items: center;
  }

  @media (min-width: 992px) {
    .about-lux__grid {
      grid-template-columns: 1.1fr 0.9fr;
    }
  }

  .about-lux__image-container {
    position: relative;
    padding: 1rem;
  }

  .about-lux__image {
    width: 100%;
    height: 500px;
    object-fit: cover;
    position: relative;
    z-index: 2;
    border: 1px solid rgba(212, 175, 55, 0.3);
  }

  .about-lux__border-decorator {
    position: absolute;
    top: -10px;
    left: -10px;
    width: 100px;
    height: 100px;
    border-top: 3px solid var(--gold);
    border-left: 3px solid var(--gold);
    z-index: 1;
  }

  .about-lux__content {
    text-align: left;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .about-lux__title {
    font-size: 2.2rem; /* Ajustado ligeramente para que quepa mejor el texto largo */
    line-height: 1.2;
    margin-bottom: 1.5rem;
    font-weight: 800;
    text-transform: uppercase;
    color: var(--white);
  }

  .about-lux__description {
    font-size: 1.1rem;
    color: #cccccc;
    margin-bottom: 1.2rem; /* Espaciado entre párrafos */
    line-height: 1.6;
  }

  .about-lux__features {
    list-style: none;
    padding: 0;
    margin: 1rem 0 0 0; /* Ajustado el margen superior */
  }

  .about-lux__features li {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 1rem;
    font-weight: 500;
  }

  .feature-icon {
    color: var(--gold);
  }

  .container {
    margin: 0 auto;
    width: 85%;
  }

  @media (max-width: 768px) {
    .about-lux__title {
      font-size: 1.8rem;
    }
    .about-lux__image {
      height: 350px;
    }
    .about-lux__grid {
      gap: 2.5rem;
    }
  }
</style>