---
import { Icon } from "astro-icon/components";

interface Props {
  lang?: 'en' | 'es';
}

const { lang = "en" } = Astro.props;

const translations = {
  en: {
    button: "Book My Appointment",
    titles: [
      "Trusted Dentist in <br/> Playa del Carmen, Mexico",
      "World-Class Dental Care <br/> at Local Prices",
      "English-Speaking Specialists <br/> You Can Trust"
    ]
  },
  es: {
    button: "¡Quiero mi sonrisa con Stetic Dental!",
    titles: [
      "Dentista de Confianza <br/> en Playa del Carmen, México",
      "Cuidado Dental de Clase Mundial <br/> a Precios Locales",
      "Especialistas Certificados <br/> para tu Sonrisa"
    ]
  }
};

const t = translations[lang];
---

<header class="header">
  <div class="header__video-container">
    <video 
      autoplay 
      muted 
      loop 
      playsinline 
      class="header__video"
    >
      <source src="/video-bg.mp4" type="video/mp4" />
    </video>
    
    <div class="header__overlay"></div>
    
    <div class="header__content container">
      <h1 class="header__title">
        </h1>
      
      <div class="header__actions">
        <a class="header__btn" href="#especialidades">
          {t.button}
          <Icon name="arrow-down" color="white" class="arrow-down" size={20} />
        </a>
      </div>
    </div>
  </div>
</header>

<script is:inline id="header-data" data-titles={JSON.stringify(t.titles)}>
  document.addEventListener("DOMContentLoaded", () => {
    const dataEl = document.getElementById('header-data');
    const titles = JSON.parse(dataEl.getAttribute('data-titles'));
    const headerTitle = document.querySelector(".header__title");
    let currentTitleIndex = 0;

    if (headerTitle) {
      headerTitle.innerHTML = titles[currentTitleIndex];
      headerTitle.style.opacity = "1";
    }

    setInterval(() => {
      if (headerTitle) {
        headerTitle.style.opacity = "0";
        headerTitle.style.transform = "translateY(10px)";
        
        setTimeout(() => {
          currentTitleIndex = (currentTitleIndex + 1) % titles.length;
          headerTitle.innerHTML = titles[currentTitleIndex];
          headerTitle.style.opacity = "1";
          headerTitle.style.transform = "translateY(0)";
        }, 600);
      }
    }, 5000);
  });
</script>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --white: #ffffff;
  }

  .header { 
    position: relative; 
    width: 100%; 
    height: 85dvh; /* Altura media pantalla */
    min-height: 450px; 
    overflow: hidden; 
    background-color: var(--black);
  }

  .header__video-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .header__video {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
    object-fit: cover;
    z-index: 0;
    filter: brightness(0.5);
  }

  .header__overlay { 
    position: absolute; 
    top: 0; 
    left: 0; 
    width: 100%; 
    height: 100%; 
    z-index: 1; 
    /* Gradiente hacia la izquierda para favorecer la lectura del texto */
    background: linear-gradient(
      90deg, 
      rgba(0, 0, 0, 0.9) 0%, 
      rgba(0, 0, 0, 0.4) 50%, 
      rgba(0, 0, 0, 0.2) 100%
    ); 
  }

  .header__content { 
    position: relative; 
    color: var(--white); 
    text-align: left; /* Alineación de texto a la izquierda */
    z-index: 2; 
    display: flex; 
    flex-direction: column; 
    justify-content: center; 
    align-items: flex-start; /* Contenido a la izquierda */
    height: 100%; 
    padding: 0 2rem;
  }

  .header__title { 
    font-size: 2.2rem; 
    font-weight: 800; 
    margin: 1rem 0; 
    transition: all 0.6s ease; 
    text-transform: uppercase; 
    letter-spacing: -1px; 
    line-height: 1.1;
    max-width: 800px;
    color: var(--white);
  }

  @media (min-width: 768px) { 
    .header__title { font-size: 3.5rem; } 
  }

  .header__welcome { 
    display: flex; 
    align-items: center; 
    gap: 1rem;
    margin-bottom: 0.5rem; 
  }

  .header__line { 
    width: 60px; /* Línea decorativa después del texto */
    height: 2px; 
    background-color: var(--gold); 
  }

  .header__welcome-text { 
    font-size: 0.75rem; 
    font-weight: 700; 
    letter-spacing: 4px; 
    text-transform: uppercase; 
    color: var(--gold); 
  }

  .header__description { 
    font-size: 1rem; 
    margin-bottom: 2rem; 
    max-width: 600px; 
    line-height: 1.5;
    color: #f0f0f0;
  }

  .text-gold {
    color: var(--gold);
  }

  .header__actions {
    width: 100%;
    display: flex;
    justify-content: flex-start; /* Botón a la izquierda */
  }

  .header__btn { 
    background-color: var(--gold); 
    color: var(--white); 
    display: inline-flex; 
    align-items: center; 
    padding: 1rem 2.5rem; 
    text-decoration: none; 
    font-weight: 700; 
    font-size: 0.85rem; 
    text-transform: uppercase; 
    letter-spacing: 2px;
    transition: all 0.3s ease; 
    border: 1px solid var(--gold);
  }

  .header__btn:hover { 
    background-color: transparent; 
    color: var(--gold);
    transform: translateX(10px); /* Animación hacia la derecha al hover */
  }

  .container { 
    margin: 0 auto; 
    width: 85%; 
  }

  .arrow-down { 
    margin-left: 12px; 
    animation: bounce 2s infinite; 
  }

  @keyframes bounce { 
    0%, 20%, 50%, 80%, 100% {transform: translateY(0);} 
    40% {transform: translateY(8px);} 
    60% {transform: translateY(4px);} 
  }
</style>