---
import { Icon } from "astro-icon/components";

interface Props {
  lang?: 'en' | 'es';
}

const { lang = "en" } = Astro.props;

const translations = {
  en: {
    subtitle: "STETIC DENTAL QUALITY",
    title: "Why International Patients Choose Our Dental Clinic",
    benefits: [
      { 
        text: "Certified and experienced dental specialists", 
        img: "/home/Iconos/certified-and-experienced-dental-specialist.png" 
      },
      { 
        text: "English-speaking team for clear communication", 
        img: "/home/Iconos/English-speaking-team-for-clear-communication.png" 
      },
      { 
        text: "Advanced dental technology and materials", 
        img: "/home/Iconos/Advanced-dental-technology-and-materials.png" 
      },
      { 
        text: "Transparent treatment plans and pricing", 
        img: "/home/Iconos/Transparent-treatment-plans-and-pricing.png" 
      },
      { 
        text: "Personalized care for international patients", 
        img: "/home/Iconos/Personalized-care-for-international-patients.png" 
      }
    ],
    footerText: "We understand the concerns of patients traveling from abroad and focus on providing a professional, safe, and comfortable dental experience in Playa del Carmen."
  },
  es: {
    subtitle: "CALIDAD STETIC DENTAL",
    title: "¿Por qué los pacientes internacionales eligen nuestra clínica?",
    benefits: [
      { 
        text: "Especialistas dentales certificados y experimentados", 
        img: "/home/Iconos/certified-and-experienced-dental-specialist.png" 
      },
      { 
        text: "Equipo de habla inglesa para una comunicación clara", 
        img: "/home/Iconos/English-speaking-team-for-clear-communication.png" 
      },
      { 
        text: "Tecnología y materiales dentales avanzados", 
        img: "/home/Iconos/Advanced-dental-technology-and-materials.png" 
      },
      { 
        text: "Planes de tratamiento y precios transparentes", 
        img: "/home/Iconos/Transparent-treatment-plans-and-pricing.png" 
      },
      { 
        text: "Atención personalizada para pacientes internacionales", 
        img: "/home/Iconos/Personalized-care-for-international-patients.png" 
      }
    ],
    footerText: "Entendemos las preocupaciones de los pacientes que viajan desde el extranjero y nos enfocamos en brindar una experiencia dental profesional, segura y cómoda en Playa del Carmen."
  }
};

const t = translations[lang];
---

<section class="why-choose">
  <div class="container-fluid">
    <div class="why-choose__header">
      <span class="why-choose__subtitle">{t.subtitle}</span>
      <h2 class="why-choose__title">{t.title}</h2>
    </div>

    <div class="why-choose__grid">
      {t.benefits.map((benefit) => (
        <div class="benefit-item">
          <div class="benefit-item__icon-wrapper">
            <img src={benefit.img} alt={benefit.text} class="benefit-image" />
          </div>
          <p class="benefit-item__text">{benefit.text}</p>
          <div class="benefit-item__line"></div>
        </div>
      ))}
    </div>

    <div class="why-choose__footer">
      <div class="why-choose__footer-content">
        <Icon name="insignia" size={40} class="footer-icon" />
        <p class="footer-text">{t.footerText}</p>
      </div>
    </div>
  </div>
</section>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --dark-accent: #0a0a0a;
    --white: #ffffff;
    --gray-border: #1a1a1a;
  }

  .why-choose {
    background-color: var(--black);
    color: var(--white);
    padding: 8rem 0;
  }

  .why-choose__header {
    text-align: center;
    margin-bottom: 5rem;
    max-width: 850px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 1rem;
  }

  .why-choose__subtitle {
    color: var(--gold);
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 4px;
    text-transform: uppercase;
    display: block;
    margin-bottom: 1.2rem;
  }

  .why-choose__title {
    font-size: 2.3rem;
    font-weight: 800;
    color: var(--white);
    line-height: 1.1;
    text-transform: uppercase;
    letter-spacing: -0.5px;
  }

  .why-choose__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-bottom: 5rem;
    padding: 0 1rem;
  }

  @media (min-width: 640px) {
    .why-choose__grid { grid-template-columns: repeat(2, 1fr); }
  }

  @media (min-width: 1024px) {
    .why-choose__grid { grid-template-columns: repeat(3, 1fr); }
  }

  @media (min-width: 1440px) {
    .why-choose__grid {
      grid-template-columns: repeat(5, 1fr);
      gap: 1rem;
    }
  }

  .benefit-item {
    padding: 2.5rem 1.5rem;
    background-color: var(--dark-accent);
    border: 1px solid var(--gray-border);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    min-height: 300px;
    justify-content: center;
  }

  .benefit-item:hover {
    border-color: var(--gold);
    transform: translateY(-10px);
    background-color: #0f0f0f;
    box-shadow: 0 15px 30px rgba(0,0,0,0.5);
  }

  .benefit-item__icon-wrapper {
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
  }

  .benefit-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    /* Invertimos el color a blanco para que resalte en el fondo negro */
    filter: brightness(0) invert(1);
    transition: all 0.3s ease;
  }

  .benefit-item:hover .benefit-image {
    transform: scale(1.1) rotate(5deg);
    /* Al pasar el mouse, el icono se vuelve dorado */
    filter: sepia(1) saturate(5) hue-rotate(10deg);
  }

  .benefit-item__text {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--white);
    line-height: 1.4;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .benefit-item__line {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 4px;
    background-color: var(--gold);
    transition: width 0.4s ease;
  }

  .benefit-item:hover .benefit-item__line {
    width: 60%;
  }

  .why-choose__footer {
    border-top: 1px solid var(--gray-border);
    padding-top: 4rem;
    max-width: 950px;
    margin: 0 auto;
  }

  .why-choose__footer-content {
    display: flex;
    align-items: center;
    gap: 2.5rem;
    text-align: left;
    padding: 0 1rem;
  }

  .footer-icon {
    color: var(--gold);
    flex-shrink: 0;
  }

  .footer-text {
    font-size: 1.15rem;
    color: #cccccc;
    line-height: 1.7;
    font-weight: 300;
  }

  .container-fluid {
    margin: 0 auto;
    width: 95%;
    max-width: 1600px;
  }

  @media (max-width: 768px) {
    .why-choose__title { font-size: 1.8rem; }
    .why-choose__footer-content {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }
  }
</style>