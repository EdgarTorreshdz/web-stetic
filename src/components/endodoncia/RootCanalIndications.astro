---
import { Icon } from "astro-icon/components";

interface Props {
  lang?: 'en' | 'es';
}

const { lang = "en" } = Astro.props;

const translations = {
  en: {
    title: "When Is a Root Canal Needed?",
    subtitle: "You may need a root canal treatment if you experience:",
    features: [
      "Persistent tooth pain",
      "Sensitivity to hot or cold",
      "Swelling or infection",
      "Pain when chewing",
      "A cracked or deeply decayed tooth"
    ],
    footerText: "An evaluation by a root canal dentist is essential to determine the correct treatment."
  },
  es: {
    title: "¿Cuándo se necesita una endodoncia?",
    subtitle: "Es posible que necesites un tratamiento de conducto si experimentas:",
    features: [
      "Dolor de muelas persistente",
      "Sensibilidad al frío o al calor",
      "Hinchazón o infección",
      "Dolor al masticar",
      "Un diente agrietado o con caries profunda"
    ],
    footerText: "Una evaluación por un dentista especialista es esencial para determinar el tratamiento correcto."
  }
};

const t = translations[lang];
---

<section class="indications-section">
  <div class="container">
    <div class="indications__content">
      <h2 class="indications__title">{t.title}</h2>
      <div class="indications__accent-line"></div>
      
      <p class="indications__subtitle">
        {t.subtitle}
      </p>

      <ul class="indications__list">
        {t.features.map((item) => (
          <li class="indications__item">
            <Icon name="star" size={16} class="text-gold" /> 
            <span>{item}</span>
          </li>
        ))}
      </ul>

      <p class="indications__footer">
        {t.footerText}
      </p>
    </div>
  </div>
</section>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --white: #ffffff;
  }

  .indications-section {
    padding: 100px 0;
    background-color: var(--white);
    color: var(--black);
    text-align: center; /* Centra el texto base */
  }

  .container {
    margin: 0 auto;
    width: 85%;
  }

  .indications__content {
    max-width: 800px; /* Limita el ancho para mejor lectura al estar centrado */
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .indications__title {
    font-size: 2rem;
    font-weight: 800;
    text-transform: uppercase;
    line-height: 1.2;
    margin-bottom: 20px;
  }

  @media (min-width: 768px) {
    .indications__title {
      font-size: 3rem;
    }
  }

  .indications__accent-line {
    width: 80px;
    height: 3px;
    background-color: var(--gold);
    margin: 0 auto 30px auto;
  }

  .indications__subtitle {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 35px;
  }

  .indications__list {
    list-style: none;
    padding: 0;
    margin: 0 0 40px 0;
    width: 100%;
    max-width: 500px; /* Mantiene la lista compacta y centrada */
    text-align: left; /* Alinea los items a la izquierda para que los iconos luzcan bien */
  }

  .indications__item {
    display: flex;
    align-items: center;
    gap: 15px;
    font-size: 1.1rem;
    padding: 12px 0;
    border-bottom: 1px solid #f0f0f0;
  }

  .text-gold {
    color: var(--gold);
    flex-shrink: 0;
  }

  .indications__footer {
    font-size: 1.1rem;
    font-style: italic;
    color: #444;
    padding: 20px;
    border-top: 2px solid var(--gold); /* Cambiado de borde lateral a superior para diseño centrado */
    margin-top: 20px;
    max-width: 600px;
  }
</style>