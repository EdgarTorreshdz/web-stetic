---
import { Icon } from "astro-icon/components";

interface Props {
  lang?: 'en' | 'es';
}

const { lang = "en" } = Astro.props;

const translations = {
  en: {
    title: "Schedule Your Root Canal Treatment",
    description: "If you are experiencing dental pain and need immediate care, our team is ready to help. Contact us today to schedule your root canal treatment in Playa del Carmen and get relief as soon as possible.",
    button: "Book Your Root Canal Appointment Now"
  },
  es: {
    title: "Agenda tu Tratamiento de Endodoncia",
    description: "Si experimentas dolor dental y necesitas atención inmediata, nuestro equipo está listo para ayudarte. Contáctanos hoy para programar tu endodoncia en Playa del Carmen y obtén alivio lo antes posible.",
    button: "Reserva tu Cita de Endodoncia Ahora"
  }
};

const t = translations[lang];
---

<section class="cta-section">
  <div class="container">
    <div class="cta__card">
      <h2 class="cta__title">{t.title}</h2>
      <div class="cta__accent-line"></div>
      
      <p class="cta__description">
        {t.description}
      </p>

      <div class="cta__actions">
        <a href="#contacto" class="cta__btn">
          {t.button}
          <Icon name="whats" size={24} class="cta__icon" />
        </a>
      </div>
      
      <p class="cta__note">
        {lang === 'en' ? "Fast response for urgent cases" : "Respuesta rápida para casos urgentes"}
      </p>
    </div>
  </div>
</section>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --white: #ffffff;
  }

  .cta-section {
    padding: 100px 0;
    background-color: var(--black);
    color: var(--white);
    position: relative;
    overflow: hidden;
  }

  /* Efecto de luz de fondo sutil */
  .cta-section::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(165, 142, 85, 0.08) 0%, rgba(0,0,0,0) 70%);
    transform: translate(-50%, -50%);
    z-index: 0;
  }

  .container {
    margin: 0 auto;
    width: 85%;
    position: relative;
    z-index: 1;
  }

  .cta__card {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    padding: 60px 40px;
    border: 1px solid rgba(165, 142, 85, 0.3);
    background-color: rgba(255, 255, 255, 0.02);
  }

  .cta__title {
    font-size: 2.2rem;
    font-weight: 800;
    text-transform: uppercase;
    color: var(--gold); /* Título dorado solicitado */
    margin-bottom: 20px;
    line-height: 1.2;
  }

  @media (min-width: 768px) {
    .cta__title {
      font-size: 3.2rem;
    }
  }

  .cta__accent-line {
    width: 80px;
    height: 3px;
    background-color: var(--gold);
    margin: 0 auto 30px auto;
  }

  .cta__description {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #e0e0e0; /* Letras blancas/gris claro */
    margin-bottom: 40px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 768px) {
    .cta__description {
      font-size: 1.3rem;
    }
  }

  .cta__actions {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
  }

  .cta__btn {
    background-color: var(--gold);
    color: var(--white);
    padding: 20px 40px;
    text-decoration: none;
    font-weight: 800;
    text-transform: uppercase;
    font-size: 1rem;
    display: flex;
    align-items: center;
    gap: 15px;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(165, 142, 85, 0.2);
  }

  .cta__btn:hover {
    transform: translateY(-5px);
    background-color: #c4ae6d;
    box-shadow: 0 15px 40px rgba(165, 142, 85, 0.4);
  }

  .cta__icon {
    transition: transform 0.3s ease;
  }

  .cta__btn:hover .cta__icon {
    transform: scale(1.2);
  }

  .cta__note {
    font-size: 0.9rem;
    color: var(--gold);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-top: 15px;
  }
</style>