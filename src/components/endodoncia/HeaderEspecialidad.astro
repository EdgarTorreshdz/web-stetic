---
import { Icon } from "astro-icon/components";

interface Props {
  lang?: 'en' | 'es';
}

const { lang = "en" } = Astro.props;

const translations = {
  en: {
    title: "Root Canal Treatment in Playa del Carmen, Mexico",
    subheadline: "Pain-relief focused root canal treatment performed by experienced endodontists for international patients.",
    features: [
      "Experienced root canal dentist",
      "Endodontist in Playa del Carmen",
      "Modern pain-control techniques",
      "English-speaking dental team"
    ],
    button: "Schedule Your Root Canal Appointment"
  },
  es: {
    title: "Tratamiento de Endodoncia en Playa del Carmen, México",
    subheadline: "Tratamiento de conducto enfocado en el alivio del dolor realizado por endodoncistas expertos para pacientes internacionales.",
    features: [
      "Dentista experto en endodoncia",
      "Endodoncista en Playa del Carmen",
      "Técnicas modernas de control de dolor",
      "Equipo dental bilingüe"
    ],
    button: "Agenda tu Cita de Endodoncia"
  }
};

const t = translations[lang];
---

<header class="header">
  <div class="header__container container">
    <div class="header__content">
      <h1 class="header__title">{t.title}</h1>
      
      <p class="header__description">
        {t.subheadline}
      </p>

      <ul class="header__features">
        {t.features.map((feature) => (
          <li class="header__feature-item">
            <Icon name="star" size={18} class="text-gold" /> 
            <span>{feature}</span>
          </li>
        ))}
      </ul>

      <div class="header__actions">
        <a class="header__btn" href="#about">
          {t.button}
          <Icon name="arrow-down" color="white" class="arrow-down" size={20} />
        </a>
      </div>
    </div>

    <div class="header__image-wrapper">
       <img src="/especialidad1.jpeg" alt="Root Canal Treatment" class="header__img" />
    </div>
  </div>
</header>

<style>
  :root {
    --gold: #A58E55;
    --black: #000000;
    --white: #ffffff;
  }

  .header { 
    position: relative; 
    width: 100%; 
    min-height: 85dvh; 
    background-color: var(--black);
    display: flex;
    align-items: center;
    padding: 80px 0;
    overflow: hidden;
  }

  .container { 
    margin: 0 auto; 
    width: 85%; /* Nuevo tamaño estándar solicitado */
  }

  .header__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 50px;
  }

  @media (min-width: 992px) {
    .header__container {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
      gap: 60px;
    }
  }

  .header__content {
    flex: 1.2; /* El texto ocupa un poco más de espacio */
    color: var(--white);
    z-index: 2;
  }

  .header__title { 
    font-size: 2.2rem; 
    font-weight: 800; 
    margin-bottom: 1.5rem; 
    text-transform: uppercase; 
    line-height: 1.1;
    color: var(--white);
  }

  @media (min-width: 768px) { 
    .header__title { font-size: 3.5rem; } 
  }

  .header__description { 
    font-size: 1.1rem; 
    margin-bottom: 2rem; 
    line-height: 1.6;
    color: #e0e0e0;
  }

  .header__features {
    list-style: none;
    padding: 0;
    margin: 0 0 3rem 0;
    display: grid;
    grid-template-columns: 1fr;
    gap: 15px;
  }

  @media (min-width: 576px) {
    .header__features {
      grid-template-columns: 1fr 1fr;
    }
  }

  .header__feature-item {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 1rem;
  }

  .text-gold {
    color: var(--gold);
  }

  .header__btn { 
    background-color: var(--gold); 
    color: var(--white); 
    display: inline-flex; 
    align-items: center; 
    padding: 1.2rem 2.5rem; 
    text-decoration: none; 
    font-weight: 700; 
    text-transform: uppercase; 
    font-size: 0.9rem;
    transition: all 0.3s ease; 
    border: 1px solid var(--gold);
  }

  .header__btn:hover { 
    background-color: transparent; 
    color: var(--gold);
  }

  /* Estilos de la imagen sin max-width */
  .header__image-wrapper {
    flex: 1;
    width: 100%;
  }

  .header__img {
    width: 100%; /* Ocupa el 100% de su contenedor flex */
    height: auto;
    border-radius: 4px;
    object-fit: cover;
    display: block;
    box-shadow: 0 20px 40px rgba(0,0,0,0.6);
  }

  .arrow-down { 
    margin-left: 12px; 
    animation: bounce 2s infinite; 
  }

  @keyframes bounce { 
    0%, 20%, 50%, 80%, 100% {transform: translateY(0);} 
    40% {transform: translateY(8px);} 
    60% {transform: translateY(4px);} 
  }
</style>