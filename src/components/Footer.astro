---
import { Icon } from "astro-icon/components";
---

<footer class="footer">
  <div class="container">
    <div class="footer__content">
      <div class="footer__social">
        <a href="https://www.facebook.com/steticdentalplaya" target="_blank" aria-label="Facebook">
          <Icon name="facebook" size={24} />
        </a>
        <a href="https://www.instagram.com/steticdentalplaya" target="_blank" aria-label="Instagram">
          <Icon name="instagram" size={24} />
        </a>
        <a href="https://wa.me/529841880338" target="_blank" aria-label="WhatsApp">
          <Icon name="whatsapp" size={24} />
        </a>
      </div>

      <nav class="footer__legal">
        <a href="/aviso-de-privacidad">Privacy Policy</a>
        <span class="separator">|</span>
        <a href="/terminos-condiciones">Terms & Conditions</a>
        <span class="separator">|</span>
        <a href="/politica-de-cookies">Cookies</a>
      </nav>

      <div class="footer__bottom">
        <p>Stetic Dental Clinic © 2025. All rights reserved.</p>
        <p class="developer">
          Developed by 
          <a href="https://huella-digital.mx/" target="_blank" rel="noopener noreferrer">Huella Digital — Agencia de marketing digital en México</a>
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  :root {
    --gold: #D4AF37;
    --black: #000000;
    --white: #ffffff;
  }

  .footer {
    background-color: var(--black);
    color: var(--white);
    padding: 4rem 0 3rem 0; /* Padding ajustado por la falta de logo */
    border-top: 1px solid #1a1a1a;
  }

  .container {
    width: 85%;
    margin: 0 auto;
  }

  .footer__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 2rem;
  }

  /* Social Icons */
  .footer__social {
    display: flex;
    gap: 2rem;
  }

  .footer__social a {
    color: var(--white);
    transition: all 0.3s ease;
  }

  .footer__social a:hover {
    color: var(--gold);
    transform: translateY(-3px);
  }

  /* Legal Links */
  .footer__legal {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .footer__legal a {
    color: #999;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer__legal a:hover {
    color: var(--gold);
  }

  .separator {
    color: #333;
  }

  /* Bottom Copyright */
  .footer__bottom {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    font-size: 0.8rem;
    color: #666;
    letter-spacing: 0.5px;
  }

  .developer a {
    color: var(--gold);
    text-decoration: none;
    font-weight: 700;
    transition: opacity 0.3s ease;
  }

  .developer a:hover {
    opacity: 0.8;
    text-decoration: underline;
  }

  /* Mobile Adjustment */
  @media (max-width: 768px) {
    .container {
      width: 90%;
    }
    .footer__legal {
      flex-direction: column;
      gap: 0.8rem;
    }
    .separator {
      display: none;
    }
    .footer {
      padding: 3rem 0 2rem 0;
    }
  }
</style>