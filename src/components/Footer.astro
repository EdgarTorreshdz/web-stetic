<style>
  .footer {
    background-color: #02101d;
    color: #fff;
    padding: 2rem 1rem;
    font-family: "Montserrat", sans-serif;
  }
  .footer__container {
    max-width: 1200px;
    margin: 0 auto;
    width: 95%;
  }
  .footer__top {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 1rem;
  }
  .footer__top h3 {
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }
  .footer__sitemap {
    display: none;
  }

  @media (min-width: 768px) {
    .footer__sitemap {
      display: block;
    }
  }
  .footer__contact {
    display: none;
  }

  @media (min-width: 768px) {
    .footer__contact {
      display: block;
    }
  }
  .footer__legal {
    display: none;
  }
  @media (min-width: 768px) {
    .footer__legal {
      display: block;
    }
  }
  .footer__sitemap ul,
  .footer__social ul,
  .footer__legal ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .footer__sitemap li,
  .footer__social li,
  .footer__legal li {
    margin-bottom: 0.5rem;
  }
  .footer__sitemap a,
  .footer__social a,
  .footer__legal a {
    color: #fff;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  .footer__sitemap a:hover,
  .footer__social a:hover,
  .footer__legal a:hover {
    color: #27b9c6;
  }
  .footer__contact p {
    margin: 0.5rem 0;
  }
  .footer__contact p svg {
    margin-right: 0.5rem;
    vertical-align: middle;
  }
  /* Logo */
  .footer__logo {
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .footer__logo img {
    max-width: 100px;
    margin-bottom: 0.5rem;
  }
  .footer__logo p {
    margin: 0;
    font-size: 1rem;
    font-weight: bold;
  }
  .footer__bottom {
    text-align: center;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: 1rem;
    font-size: 0.9rem;
  }

  /* Estilos Mobile-First: para pantallas pequeñas se centra el contenido */
  @media (max-width: 768px) {
    .footer__top,
    .footer__sitemap,
    .footer__social,
    .footer__contact,
    .footer__legal {
      text-align: center;
      justify-items: center;
    }
  }
</style>
